<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="container">
  </br></br></br>
    <div class="row">
      <div id="subtitle">
        <h1>Your Toble</h1>
        <h3>Toble Code: <%= code%></h3>
      </div></br>
      <div class="col-md-6">
        <div class="list-group">
          <div class="list-group-item active" id="search">
            <table>
              <tr>
                <td><i class="glyphicon glyphicon-search"></i></td>
                <td><input type="text" class="form-control" id="searchinput" placeholder="Search for a video or song..." /></td> 
              </tr>
            </table>
          </div>
          <div id="searchresults">
            <a href="#" class="list-group-item">
              The Beatles - Dear Prudence
              <button type="button" class="btn btn-sm add btn-primary">
                 Add
              </button>
            </a>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="list-group">
          <div class="list-group-item active" id="nowplaying">
            <span class="badge">2</span>
            <table style="width: auto;">
              <tr>
                <td><i class="glyphicon glyphicon-play"></i></td>
                <td>Now Playing: Radiohead - Present Tense</td>
                <td></td>
              </tr>
            </table>
          </div>
          <div class="list-group-item clearfix">
            The Beatles - Sexy Sadie
            <button type="button" class="btn btn-sm upvote btn-primary">
               Upvote
            </button>
            <span class="badge">4</span>
          </div>
          <div class="list-group-item">
            Pixies - Here Comes Your Man
            <span class="badge">2</span>
            <button type="button" class="btn btn-sm upvote btn-info">
               Upvoted
            </button>
          </div>
          <div class="list-group-item">
            Weezer - Buddy Holly
            <span class="badge">1</span>
            <button type="button" class="btn btn-sm upvote btn-primary">
               Upvote
            </button>
          </div>
          <div class="list-group-item">
            Adele - Hello
            <span class="badge">1</span>
            <button type="button" class="btn btn-sm upvote btn-primary">
               Upvote
            </button>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- /container -->
  <div id="search-container"></div>
  <div id="toblecode" style="display: none;"><%= code%></div>
  <div id="googleapikey" style="display: none;"><%= googleapikey%></div>
  <% include ../partials/footer.ejs %>
  <link rel="stylesheet" type="text/css" href="/css/toble.css" />
  <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
  <script src="/js/toble.js"></script>
  <script src="https://apis.google.com/js/client.js?onload=initializeYoutubeAPI"></script>
</body>
</html>
